<UserControl
    x:Class="tOrder.UI.PopupDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:PopupDisplayControlVM />
    </UserControl.DataContext>

    <Grid>
        <Popup
            IsOpen="{Binding IsOpen, Mode=TwoWay}"
            IsLightDismissEnabled="True"
            HorizontalOffset="0"
            VerticalOffset="22">

            <Border Background="#FFF2F2F2"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="4"
                    Width="236"
                    Padding="0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- HEADER -->
                    <Grid Grid.Row="0" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
              Glyph="&#xE946;"
              FontSize="16"
              Foreground="DodgerBlue"
              VerticalAlignment="Center"
              Margin="4,0,6,0" />

                        <TextBlock Grid.Column="1"
               Text="{Binding PopupTitle}"
               FontSize="16"
               FontWeight="{Binding PopupTitleWeight}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />

                        <Button Grid.Column="2"
            Content="âœ•"
            Background="Transparent"
            BorderThickness="0"
            Foreground="Black"
            FontSize="20" 
            Padding="6,2"
            Margin="0,0,0,0" 
                            Click="ClosePopup_Click"
            VerticalAlignment="Center"
            HorizontalAlignment="Right" />
                    </Grid>


                    <!-- CONTENT -->
                    <ItemsControl Grid.Row="1"
              ItemsSource="{Binding PopupContent}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="22" Padding="10,0,8,3">
                                    <!-- 10px zleva pro zarovnÃ¡nÃ­ -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="20" />
                                    </Grid.ColumnDefinitions>

                                    <!-- ðŸ‘¤ Name -->
                                    <TextBlock Grid.Column="0"
                   Text="{Binding Key}"
                   Style="{StaticResource T_SmallTextStyle}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left" />

                                    <!-- ðŸ“Š Points -->
                                    <TextBlock Grid.Column="1"
                   Text="{Binding Value}"
                   Style="{StaticResource T_SmallTextStyle}"
                   VerticalAlignment="Center"
                   TextAlignment="Right"
                   HorizontalAlignment="Right" />
                                </Grid>
                            </DataTemplate>



                        </ItemsControl.ItemTemplate>

                    </ItemsControl>




                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
