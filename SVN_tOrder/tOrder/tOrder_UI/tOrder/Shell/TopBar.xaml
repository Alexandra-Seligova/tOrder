<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="tOrder.Shell.TopBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:tOrder.Shell"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    xmlns:shell="using:tOrder.Shell"
    x:DataType="shell:TopBarVM">


    <UserControl.Resources>
        <Color x:Key="TextColor">#FFFFFF</Color>
    </UserControl.Resources>

    <Border Background="#003f7f" VerticalAlignment="Top">
        <Grid VerticalAlignment="Center" Padding="4,0" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Menu toggle button -->
            <Button Grid.Column="0"
        Background="Transparent"
        BorderThickness="0"
        Command="{x:Bind VM.ToggleMenuCommand}">
                <FontIcon Glyph="&#xE700;" FontSize="28" Foreground="White" />
            </Button>


            <!-- Back button -->
            <controls:FontIcon Grid.Column="2" Glyph="&#xE72B;" FontSize="32" FontWeight="Bold" Foreground="White" />

            <!-- Title and breadcrumb -->
            <StackPanel Grid.Column="3" Orientation="Vertical" VerticalAlignment="Center" Spacing="2">
                <TextBlock Text="{x:Bind VM.Heading, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="{x:Bind VM.BreadCrumpText, Mode=OneWay}" FontSize="14" Foreground="White" />
            </StackPanel>

            <!-- User info + clock -->
            <Grid Grid.Column="5" VerticalAlignment="Center" Background="#052f60" ColumnSpacing="16" Padding="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <controls:PersonPicture Width="48" Height="48" Grid.Column="0" />

                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind VM.UserName, Mode=OneWay}" FontSize="14" Foreground="White" />
                    <TextBlock Text="{x:Bind VM.UserSurname, Mode=OneWay}" FontSize="14" Foreground="White" />
                    <TextBlock Text="{x:Bind VM.SessionDuration, Mode=OneWay}" FontSize="14" Foreground="White" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind VM.CurrentTime, Mode=OneWay}" FontSize="14" HorizontalAlignment="Center" Foreground="White" />
                    <TextBlock Text="{x:Bind VM.CurrentDate, Mode=OneWay}" FontSize="14" HorizontalAlignment="Center" Foreground="White" />
                </StackPanel>
            </Grid>

            <!-- Notifications icon -->
            <Button Grid.Column="6" Background="Transparent" BorderThickness="0">
                <controls:FontIcon Glyph="&#xEA8F;" FontSize="32" Foreground="White" />
            </Button>
        </Grid>
    </Border>
</UserControl>
