<!--===========================================================================
    🪟 MainWindow.xaml
===========================================================================

    MainWindow serves as the host window for the tOrder application.
    It renders the `MainLayout`, which includes:
    ┌────────────────────────────────────────────────────────────┐
    │ - NavigationView (left menu panel)                         │
    │ - TopBar (header layout section)                           │
    │ - Main content Frame (dynamic page navigation)             │
    │ - Alerts & notifications                                   │
    └────────────────────────────────────────────────────────────┘

    This file only includes a single visual root: <MainLayout>.
    All UI structure and logic are delegated to it.

===========================================================================-->

<Window
    x:Class="tOrder.Shell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:tOrder.Shell"
    xmlns:navigation="using:tOrder.Shell"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Root layout hosting the full UI structure -->
    <navigation:MainLayout x:Name="RootLayout" />

</Window>
