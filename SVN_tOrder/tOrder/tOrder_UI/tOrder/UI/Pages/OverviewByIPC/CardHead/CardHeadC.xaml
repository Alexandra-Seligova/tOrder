<UserControl
    x:Class="tOrder.UI.CardHeadC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="Root"
    Height="68">

    <UserControl.Resources>
        <Thickness x:Key="CardHeadTextPadding">4,4,4,4</Thickness>
        <Style x:Key="CardHeadMainTextStyle" TargetType="TextBlock" BasedOn="{StaticResource T_TitleTextStyle}" />
        <Style x:Key="CardHeadSecondaryTextStyle" TargetType="TextBlock" BasedOn="{StaticResource T_BaseTextBlockStyle}" />
        <Style x:Key="CardHeadNumberTextStyle" TargetType="TextBlock" BasedOn="{StaticResource T_TitleLargeTextStyle}" />
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>

        <!-- Text Section -->
        <StackPanel Grid.Column="0"
                    Background="{x:Bind CardHeadMainBrush, Mode=OneWay}"
                    Orientation="Vertical"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Padding="{StaticResource CardHeadTextPadding}">
            <TextBlock Text="{x:Bind CardHeadTextMain, Mode=OneWay}"
                       Style="{StaticResource CardHeadMainTextStyle}" />
            <TextBlock Text="{x:Bind CardHeadTextSecondary, Mode=OneWay}"
                       Style="{StaticResource CardHeadSecondaryTextStyle}"
                       Margin="2,0,0,0" />
        </StackPanel>

        <!-- Number Section -->
        <Border Grid.Column="1"
                Background="{x:Bind CardHeadNumberBrush, Mode=OneWay}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <TextBlock Text="{x:Bind CardHeadNumber, Mode=OneWay}"
                       Style="{StaticResource CardHeadNumberTextStyle}"
                       Foreground="White"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </Border>

        <!-- Button Section -->
        <Border Grid.Column="2"
                Background="{StaticResource PrimaryColor}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Button Command="{x:Bind CardHeadButton, Mode=OneWay}" Background="Transparent" BorderThickness="0">
                <Image Width="60" Height="50"
                       Source="ms-appx:///Assets/Icons/more-vertical.svg"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="4,0,0,0" />
            </Button>
        </Border>
    </Grid>
</UserControl>
