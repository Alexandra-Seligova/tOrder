<UserControl
    x:Class="tOrder.UI.CardProductionContentC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:converters="using:tOrder.Common"
    x:Name="Root"
    x:DataType="viewmodels:CardProductionContentC"
    xmlns:viewmodels="using:tOrder.UI"
    Width="228"
    Background="Transparent">


    <UserControl.Resources>
        <converters:StatusToBrushConverter x:Key="StatusToBrushConverter" />

        <Style x:Key="CardDataNameStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Foreground" Value="Black" />
        </Style>

        <Style x:Key="CardDataValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </UserControl.Resources>

    <StackPanel  Padding="4,8,8,0" Spacing="8">

        <!-- Grid Row 0 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Levá polovina – Name0 / Value0 -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="{x:Bind CardContentTextName0}" 
                           Style="{StaticResource T_SmallTextStyle}" />
                <TextBlock Text="{x:Bind CardContentTextValue0}" 
                           Style="{StaticResource T_MediumStrongTextStyle}" />
            </StackPanel>

            <!-- Pravá polovina – Status -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Left"
                        Margin="0,-4,0,0">
                <TextBlock
    Text="{x:Bind CardContentTextStatusName}"
    Style="{StaticResource T_MediumStrongTextStyle}"
    Foreground="{x:Bind StatusBrush, Mode=OneWay}" 
    TextWrapping="NoWrap"
    TextTrimming="None"
    HorizontalAlignment="Left"
    Margin="0,0,-10,0" />

                <!-- negativní pravý margin umožní vyjít textu za okraj -->

                <TextBlock Text="{x:Bind CardContentTextStatusType}" 
                           Style="{StaticResource T_NormalStrongTextStyle}"
                          />
            </StackPanel>
        </Grid>

        <!-- Další řádky -->
        <StackPanel>
            <TextBlock Text="{x:Bind CardContentTextName1}" 
                       Style="{StaticResource T_SmallTextStyle}" Margin="0,8,0,0" />
            <TextBlock Text="{x:Bind CardContentTextValue1}" 
                       Style="{StaticResource T_MediumStrongTextStyle}" />

            <TextBlock Text="{x:Bind CardContentTextName2}" 
                       Style="{StaticResource T_SmallTextStyle}" Margin="0,8,0,0" />
            <TextBlock Text="{x:Bind CardContentTextValue2}" 
                       Style="{StaticResource T_MediumStrongTextStyle}" />

            <TextBlock Text="{x:Bind CardContentTextName3}" 
                       Style="{StaticResource T_SmallTextStyle}" Margin="0,8,0,0" />
            <TextBlock Text="{x:Bind CardContentTextValue3}" 
                       Style="{StaticResource T_MediumStrongTextStyle}" />
        </StackPanel>
    </StackPanel>
</UserControl>
