<UserControl
    x:Class="tOrder.UI.ChargenContentC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Proměnné pro pohodlné ladění -->
        <x:Double x:Key="BlueButtonWidth">160</x:Double>
        <x:Double x:Key="BlueButtonHeight">36</x:Double>

        <Style x:Key="GrayBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#C4C4C4"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="{StaticResource BlueButtonWidth}"/>
            <Setter Property="Height" Value="{StaticResource BlueButtonHeight}"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="5,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,24,0,0" Background="#F6F6F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Row 0: Materialcharge -->
            <RowDefinition Height="8"/>
            <!-- Oddělovací čára -->
            <RowDefinition Height="60"/>
            <!-- Row 1: Eingang Behälter -->
            <RowDefinition Height="8"/>
            <!-- Oddělovací čára -->
            <RowDefinition Height="60"/>
            <!-- Row 2: Ausgang Behälter -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ROW 0: Materialcharge -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Materialcharge" FontSize="18" VerticalAlignment="Center" Margin="12,0"/>
        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource GrayBoxStyle}">
            <TextBlock Text="563335" FontSize="20" FontWeight="Bold"/>
        </Border>
        <Button Grid.Row="0" Grid.Column="7" Style="{StaticResource BlueButtonStyle}" HorizontalAlignment="Right">
            <TextBlock TextAlignment="Center">
            Neue Materialcharge
            <LineBreak/>
            übernehmen
            </TextBlock>
        </Button>

        <!-- Čára pod row0 -->
        <Rectangle Grid.Row="1" Grid.ColumnSpan="8" Height="2" Fill="#DDD" VerticalAlignment="Center"/>

        <!-- ROW 1: Eingang Behälter -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Eingang Behälter" FontSize="17" VerticalAlignment="Center" Margin="12,0"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="➡" Foreground="Green" FontSize="38" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="3" FontStyle="Italic" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"
              ItemsSource="{x:Bind EingangLabels}" SelectedIndex="0" Width="180"/>
        <ComboBox Grid.Row="2" Grid.Column="4" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"
              ItemsSource="{x:Bind EingangNumbers}" SelectedIndex="0" Width="80"/>
        <Button Grid.Row="2" Grid.Column="6" Style="{StaticResource BlueButtonStyle}">
            <TextBlock TextAlignment="Center">
            Eingang Behälter
            <LineBreak/>
            abschließen (nicht leer)
            </TextBlock>
        </Button>
        <Button Grid.Row="2" Grid.Column="7" Style="{StaticResource BlueButtonStyle}">
            <TextBlock TextAlignment="Center">
            Eingang Behälter
            <LineBreak/>
            abschließen (leer)
            </TextBlock>
        </Button>

        <!-- Čára pod row1 -->
        <Rectangle Grid.Row="3" Grid.ColumnSpan="8" Height="2" Fill="#DDD" VerticalAlignment="Center"/>

        <!-- ROW 2: Ausgang Behälter -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Ausgang Behälter" FontSize="17" VerticalAlignment="Center" Margin="12,0"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="➡" Foreground="Green" FontSize="38" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="3" FontStyle="Italic" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"
              ItemsSource="{x:Bind AusgangLabels}" SelectedIndex="0" Width="180"/>
        <ComboBox Grid.Row="4" Grid.Column="4" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"
              ItemsSource="{x:Bind AusgangNumbers}" SelectedIndex="0" Width="80"/>
        <Button Grid.Row="4" Grid.Column="7" Style="{StaticResource BlueButtonStyle}" HorizontalAlignment="Right">
            <TextBlock TextAlignment="Center">
            Ausgang Behälter
            <LineBreak/>
            öffnen
            </TextBlock>
        </Button>
    </Grid>


</UserControl>
