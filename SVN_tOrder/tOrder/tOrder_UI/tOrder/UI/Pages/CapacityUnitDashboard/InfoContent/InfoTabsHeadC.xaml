<!-- ===============================================================================
InfoTabsHeadC.xaml
Purpose:
- Tab header for the Info section in CapacityUnitDashboard; hosts 5 tab buttons
  and their indicator bars (active/inactive).

Layout & Styling:
- Unified "InfoTabs.*" resources (brushes, sizes, metrics) mirroring TabSelectorView.
- Neutral default (inactive); active visuals handled by existing code-behind (OnTabClick)
  and your SelectedTab DP.

Structure:
- (0) Grid container with equal-width columns and spacing columns
- (1) Five vertical stacks: Button + Indicator

Notes:
- Names preserved (TabButton_*, Indicator_*) to keep current logic intact.
============================================================================== -->

<UserControl
    x:Class="tOrder.UI.InfoTabsHeadC"
    x:Name="InfoTabsHeadCControl"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:tOrder.Common"

    mc:Ignorable="d"
    d:DesignWidth="1024"
    d:DesignHeight="60"

    Width="Auto"
    Height="{StaticResource InfoTabs.HeadHeight}"
    Background="Transparent"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Top"

    common:DesignProperties.Control="InfoTabsHeadCControl"
    common:DesignProperties.Position="Top"
    common:DesignProperties.GroupTag="TabRoot"
    common:DesignProperties.GroupSubTag="TabSelector"
    common:DesignProperties.DesignWidth="1024"
    common:DesignProperties.DesignHeight="60">

    <!-- ===========================================================
         Resources — unified "InfoTabs.*" palette & metrics
         =========================================================== -->
    <UserControl.Resources>
        <!-- Brushes -->
        <SolidColorBrush x:Key="InfoTabs.TextInactiveBrush"   Color="#555555"/>
        <SolidColorBrush x:Key="InfoTabs.TextActiveBrush"     Color="#154A84"/>
        <SolidColorBrush x:Key="InfoTabs.IndicatorActive"     Color="#154A84"/>
        <SolidColorBrush x:Key="InfoTabs.IndicatorInactive"   Color="Transparent"/>
        <SolidColorBrush x:Key="InfoTabs.BarBackground"       Color="Transparent"/>

        <!-- Metrics -->
        <x:Double x:Key="InfoTabs.HeadHeight">60</x:Double>
        <x:Double x:Key="InfoTabs.ButtonHeight">32</x:Double>
        <x:Double x:Key="InfoTabs.FontSize">14</x:Double>
        <x:Double x:Key="InfoTabs.IndicatorHeight">2</x:Double>
        <x:Double x:Key="InfoTabs.Spacing">8</x:Double>
        <CornerRadius x:Key="InfoTabs.ButtonCornerRadius">4,4,0,0</CornerRadius>

        <!-- Typography -->
        <FontWeight x:Key="InfoTabs.FontWeight.Inactive">Bold</FontWeight>
        <FontWeight x:Key="InfoTabs.FontWeight.Active">Bold</FontWeight>

        <!-- Button Style -->
        <Style x:Key="InfoTabButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="{StaticResource InfoTabs.ButtonHeight}"/>
            <Setter Property="FontSize" Value="{StaticResource InfoTabs.FontSize}"/>
            <Setter Property="FontWeight" Value="{StaticResource InfoTabs.FontWeight.Inactive}"/>
            <Setter Property="Foreground" Value="{StaticResource InfoTabs.TextInactiveBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="{StaticResource InfoTabs.ButtonCornerRadius}"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextAlignment="Center" VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- ===========================================================
         Header Grid: 5 equal columns split by spacing columns
         =========================================================== -->
    <Grid x:Name="TabRoot" Height="{StaticResource InfoTabs.HeadHeight}" Background="{StaticResource InfoTabs.BarBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Production Order -->
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Button x:Name="TabButton_0"
                    Content="Production Order"
                    Tag="ProductionOrder"
                    Click="OnTabClick"
                    Style="{StaticResource InfoTabButtonStyle}"/>
            <Border x:Name="Indicator_0"
                    Height="{StaticResource InfoTabs.IndicatorHeight}"
                    Background="{StaticResource InfoTabs.IndicatorInactive}"/>
        </StackPanel>

        <!-- Shift -->
        <StackPanel Grid.Column="2" Orientation="Vertical">
            <Button x:Name="TabButton_1"
                    Content="Shift"
                    Tag="Shift"
                    Click="OnTabClick"
                    Style="{StaticResource InfoTabButtonStyle}"/>
            <Border x:Name="Indicator_1"
                    Height="{StaticResource InfoTabs.IndicatorHeight}"
                    Background="{StaticResource InfoTabs.IndicatorInactive}"/>
        </StackPanel>

        <!-- Inbound Containers -->
        <StackPanel Grid.Column="4" Orientation="Vertical">
            <Button x:Name="TabButton_2"
                    Content="Inbound Containers"
                    Tag="InboundContainers"
                    Click="OnTabClick"
                    Style="{StaticResource InfoTabButtonStyle}"/>
            <Border x:Name="Indicator_2"
                    Height="{StaticResource InfoTabs.IndicatorHeight}"
                    Background="{StaticResource InfoTabs.IndicatorInactive}"/>
        </StackPanel>

        <!-- Outbound Containers -->
        <StackPanel Grid.Column="6" Orientation="Vertical">
            <Button x:Name="TabButton_3"
                    Content="Outbound Containers"
                    Tag="OutboundContainers"
                    Click="OnTabClick"
                    Style="{StaticResource InfoTabButtonStyle}"/>
            <Border x:Name="Indicator_3"
                    Height="{StaticResource InfoTabs.IndicatorHeight}"
                    Background="{StaticResource InfoTabs.IndicatorInactive}"/>
        </StackPanel>

        <!-- Containers for Processing -->
        <StackPanel Grid.Column="8" Orientation="Vertical">
            <Button x:Name="TabButton_4"
                    Content="Containers for Processing"
                    Tag="ContainersForProcessing"
                    Click="OnTabClick"
                    Style="{StaticResource InfoTabButtonStyle}"/>
            <Border x:Name="Indicator_4"
                    Height="{StaticResource InfoTabs.IndicatorHeight}"
                    Background="{StaticResource InfoTabs.IndicatorInactive}"/>
        </StackPanel>
    </Grid>
</UserControl>
