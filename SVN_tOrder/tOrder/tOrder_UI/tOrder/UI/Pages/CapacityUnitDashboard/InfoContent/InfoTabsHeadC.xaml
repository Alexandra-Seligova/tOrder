<UserControl
    x:Class="tOrder.UI.InfoTabsHeadC"
    x:Name="InfoTabsHeadCControl"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:tOrder.Common"

    mc:Ignorable="d"
    d:DesignWidth="1024"
    d:DesignHeight="40"

    Width="Auto"
    Height="40"
    Background="Transparent"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Top"

    common:DesignProperties.Control="InfoTabsHeadCControl"
    common:DesignProperties.Position="Top"
    common:DesignProperties.GroupTag="TabRoot"
    common:DesignProperties.GroupSubTag="TabSelector"
    common:DesignProperties.DesignWidth="1024"
    common:DesignProperties.DesignHeight="40">

	<Grid x:Name="TabRoot" Height="40">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="12"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="12"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="12"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="12"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Tab 0 -->
		<StackPanel Grid.Column="0" Orientation="Vertical">
			<Button x:Name="TabButton_0"
                    Content="Production Order"
                    Tag="ProductionOrder"
                    Click="OnTabClick"/>
			<Border x:Name="Indicator_0" Height="2" Background="Transparent"/>
		</StackPanel>

		<!-- Tab 1 -->
		<StackPanel Grid.Column="2" Orientation="Vertical">
			<Button x:Name="TabButton_1"
                    Content="Shift"
                    Tag="Shift"
                    Click="OnTabClick"/>
			<Border x:Name="Indicator_1" Height="2" Background="Transparent"/>
		</StackPanel>

		<!-- Tab 2 -->
		<StackPanel Grid.Column="4" Orientation="Vertical">
			<Button x:Name="TabButton_2"
                    Content="Inbound Containers"
                    Tag="InboundContainers"
                    Click="OnTabClick"/>
			<Border x:Name="Indicator_2" Height="2" Background="Transparent"/>
		</StackPanel>

		<!-- Tab 3 -->
		<StackPanel Grid.Column="6" Orientation="Vertical">
			<Button x:Name="TabButton_3"
                    Content="Outbound Containers"
                    Tag="OutboundContainers"
                    Click="OnTabClick"/>
			<Border x:Name="Indicator_3" Height="2" Background="Transparent"/>
		</StackPanel>

		<!-- Tab 4 -->
		<StackPanel Grid.Column="8" Orientation="Vertical">
			<Button x:Name="TabButton_4"
                    Content="Containers for Processing"
                    Tag="ContainersForProcessing"
                    Click="OnTabClick"/>
			<Border x:Name="Indicator_4" Height="2" Background="Transparent"/>
		</StackPanel>
	</Grid>
</UserControl>
