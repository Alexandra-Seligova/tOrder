<?xml version="1.0" encoding="utf-8"?>
<!--
    InfoContentC for CapacityUnitDashboard page (tOrder.UI)
    This UserControl hosts the Info section with a tab head and 5 tab views:
    - Production Order
    - Shift
    - Inbound Containers
    - Outbound Containers
    - Containers for Processing

    Styling mirrors TabSelectorView: centralized brushes, sizes, button style,
    horizontal separation and an indicator bar under the active tab.
    Tab selection is centralized via the SelectedTab DP on this control.
-->
<UserControl
    x:Class="tOrder.UI.InfoContentC"
    x:Name="InfoContentCControl"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:tOrder.Common"
    xmlns:conv="using:tOrder.Common"
    xmlns:tabs="using:tOrder.UI"

    mc:Ignorable="d"
    d:DesignWidth="1024"
    d:DesignHeight="768"

    Width="Auto"
    Height="Auto"
    Background="Transparent"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"

    common:DesignProperties.Control="InfoContentCControl"
    common:DesignProperties.Position="Top"
    common:DesignProperties.GroupTag="Layout"
    common:DesignProperties.GroupSubTag="InfoContent"
    common:DesignProperties.DesignWidth="1024"
    common:DesignProperties.DesignHeight="768">

    <!--===========================================================
        Resources: Tab button styles, colors and converter
    =============================================================-->
    <UserControl.Resources>
        <SolidColorBrush x:Key="TabInactiveTextBrush" Color="#555555"/>
        <SolidColorBrush x:Key="TabActiveBrush"        Color="#154A84"/>

        <SolidColorBrush x:Key="TabBackgroundBrush"        Color="#DCE6F4"/>
        <SolidColorBrush x:Key="TabButtonBackgroundBrush"  Color="#F5F7FA"/>
        <SolidColorBrush x:Key="TabIndicatorActiveBrush"   Color="#154A84"/>
        <SolidColorBrush x:Key="TabIndicatorInactiveBrush" Color="Transparent"/>

        <x:Double x:Key="TabButtonHeight">38</x:Double>
        <x:Double x:Key="TabButtonFontSize">16</x:Double>
        <x:Double x:Key="TabIndicatorHeight">2</x:Double>
        <x:Double x:Key="TabSpacing">11</x:Double>
        <CornerRadius x:Key="TabButtonCornerRadius">4,4,0,0</CornerRadius>
        <Thickness x:Key="TabIndicatorMarginInactive">0,0,0,0</Thickness>
        <Thickness x:Key="TabIndicatorMarginActive">0,0,0,0</Thickness>

        <FontWeight x:Key="TabButtonFontWeightBold">Bold</FontWeight>
        <FontWeight x:Key="TabButtonFontWeightNormal">Bold</FontWeight>

        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="{StaticResource TabButtonHeight}"/>
            <Setter Property="FontSize" Value="{StaticResource TabButtonFontSize}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource TabButtonBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="{StaticResource TabButtonCornerRadius}"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <conv:TabToVisibilityConverter x:Key="TabVis" />
    </UserControl.Resources>

    <!--===========================================================
        Main layout: two rows â€“ tab header and content
    =============================================================-->
    <Grid Padding="8" RowDefinitions="Auto,*" RowSpacing="0">

        <!--=======================================================
            ðŸ”˜ Tab Header (Buttons + Indicators)
        =========================================================-->
        <Grid x:Name="TabRoot"
              Height="40"
              Background="{StaticResource TabBackgroundBrush}"
              common:DesignProperties.DesignHeight="40"
              common:DesignProperties.GroupTag="TabRoot"
              common:DesignProperties.GroupSubTag="TabSelector">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tab Buttons and Indicators -->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Button x:Name="TabButton_0" Content="Production Order" Tag="ProductionOrder" Click="Tab_Click" Style="{StaticResource TabButtonStyle}" />
                <Border x:Name="Indicator_0" Height="{StaticResource TabIndicatorHeight}" Background="{StaticResource TabIndicatorInactiveBrush}" />
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Vertical">
                <Button x:Name="TabButton_1" Content="Shift" Tag="Shift" Click="Tab_Click" Style="{StaticResource TabButtonStyle}" />
                <Border x:Name="Indicator_1" Height="{StaticResource TabIndicatorHeight}" Background="{StaticResource TabIndicatorInactiveBrush}" />
            </StackPanel>
            <StackPanel Grid.Column="4" Orientation="Vertical">
                <Button x:Name="TabButton_2" Content="Inbound Containers" Tag="InboundContainers" Click="Tab_Click" Style="{StaticResource TabButtonStyle}" />
                <Border x:Name="Indicator_2" Height="{StaticResource TabIndicatorHeight}" Background="{StaticResource TabIndicatorInactiveBrush}" />
            </StackPanel>
            <StackPanel Grid.Column="6" Orientation="Vertical">
                <Button x:Name="TabButton_3" Content="Outbound Containers" Tag="OutboundContainers" Click="Tab_Click" Style="{StaticResource TabButtonStyle}" />
                <Border x:Name="Indicator_3" Height="{StaticResource TabIndicatorHeight}" Background="{StaticResource TabIndicatorInactiveBrush}" />
            </StackPanel>
            <StackPanel Grid.Column="8" Orientation="Vertical">
                <Button x:Name="TabButton_4" Content="Containers for Processing" Tag="ContainersForProcessing" Click="Tab_Click" Style="{StaticResource TabButtonStyle}" />
                <Border x:Name="Indicator_4" Height="{StaticResource TabIndicatorHeight}" Background="{StaticResource TabIndicatorInactiveBrush}" />
            </StackPanel>
        </Grid>

        <!--=======================================================
            ðŸ“¥ Content Area (Switches view by SelectedTab)
        =========================================================-->
        <Grid Grid.Row="1">
            <ContentPresenter Visibility="{Binding SelectedTab, ElementName=InfoContentCControl, Converter={StaticResource TabVis}, ConverterParameter=ProductionOrder}">
                <tabs:ProductionOrderView />
            </ContentPresenter>
            <ContentPresenter Visibility="{Binding SelectedTab, ElementName=InfoContentCControl, Converter={StaticResource TabVis}, ConverterParameter=Shift}">
                <tabs:ShiftView />
            </ContentPresenter>
            <ContentPresenter Visibility="{Binding SelectedTab, ElementName=InfoContentCControl, Converter={StaticResource TabVis}, ConverterParameter=InboundContainers}">
                <tabs:InboundContainersView />
            </ContentPresenter>
            <ContentPresenter Visibility="{Binding SelectedTab, ElementName=InfoContentCControl, Converter={StaticResource TabVis}, ConverterParameter=OutboundContainers}">
                <tabs:OutboundContainersView />
            </ContentPresenter>
            <ContentPresenter Visibility="{Binding SelectedTab, ElementName=InfoContentCControl, Converter={StaticResource TabVis}, ConverterParameter=ContainersForProcessing}">
                <tabs:ContainersForProcessingView />
            </ContentPresenter>
        </Grid>
    </Grid>
</UserControl>
