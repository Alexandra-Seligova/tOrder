<UserControl
    x:Class="tOrder.UI.DashboardHeadC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
   >

    <UserControl.Resources>
        <SolidColorBrush x:Key="UnitGreenBrush" Color="#7FBE92"/>
        <SolidColorBrush x:Key="DebugPurpleBrush" Color="#C370E0"/>

        <SolidColorBrush x:Key="HeaderBlueBrush" Color="#708CB4"/>

        <!-- HeaderText Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="HeaderTextBoldStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- SubText Style -->
        <Style x:Key="SubTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="SubTextBoldStyle" TargetType="TextBlock" BasedOn="{StaticResource SubTextStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="ProdInfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ProdInfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ProdInfoGreenStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#7FBE92"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ProdInfoSubLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ProdInfoSubValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid x:Name="ResponsiveGrid" Background="{StaticResource HeaderBlueBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Tile1 -->
            <ColumnDefinition Width="*"/>
            <!-- Tile2 -->
            <ColumnDefinition Width="*"/>
            <!-- Tile3 -->
            <ColumnDefinition Width="*"/>
            <!-- Tile4 -->
        </Grid.ColumnDefinitions>

        <!-- Dlaždice 1 - pevně vlevo, zarovnána doprava -->
        <Border x:Name="Tile1"
            Background="{StaticResource UnitGreenBrush}"
            Padding="8" MinWidth="260"
            Grid.Row="0" Grid.Column="0"
            HorizontalAlignment="Right">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Kap.Einheit:" Style="{StaticResource SubTextStyle}"/>
                    <TextBlock Text="MST-01A" Style="{StaticResource HeaderTextBoldStyle}"/>
                    <TextBlock Text="MA-178-037-0014" Style="{StaticResource SubTextStyle}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock Text="Seite:" Style="{StaticResource HeaderTextBoldStyle}" HorizontalAlignment="Center"/>
                    <TextBlock Text="1" Style="{StaticResource HeaderTextBoldStyle}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Dlaždice 2 -->
        <Border x:Name="Tile2" Grid.Row="0" Grid.Column="1"
            Background="{StaticResource HeaderBlueBrush}" Padding="8" MinWidth="260">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Prod.Auftrag: 38252" Style="{StaticResource ProdInfoValueStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Läuft" Style="{StaticResource ProdInfoGreenStyle}" Margin="0,0,12,0"/>
                    <TextBlock Text="Folgeauftrag" Style="{StaticResource ProdInfoSubLabelStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Dlaždice 3 -->
        <Border x:Name="Tile3" Grid.Row="0" Grid.Column="2"
            Background="{StaticResource HeaderBlueBrush}" Padding="8" MinWidth="260">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Artikel: F 00V H28 032/AW" Style="{StaticResource ProdInfoValueStyle}"/>
                <TextBlock Text="Material Charge: 563335" Style="{StaticResource ProdInfoSubValueStyle}"/>
            </StackPanel>
        </Border>

        <!-- Dlaždice 4 -->
        <Border x:Name="Tile4" Grid.Row="0" Grid.Column="3"
            Background="{StaticResource DebugPurpleBrush}" Padding="8" MinWidth="260">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Stückzähler: 10.654" Style="{StaticResource ProdInfoValueStyle}"/>
                <TextBlock Text="Häringcharge: H0001/A0001" Style="{StaticResource ProdInfoSubValueStyle}"/>
            </StackPanel>
        </Border>

        <!-- Visual States 
        
        ✅ Cíl přehledně:
Šířka	Rozvržení
≥ 1000	Tile1 Tile2 Tile3 Tile4 — vše vedle sebe
≥ 820	Tile1 Tile2 Tile3 nahoře, Tile4 pod Tile1 vlevo
≥ 620	Tile1 Tile2 nahoře, Tile3 Tile4 pod nimi zarovnané vlevo a vedle
< 620	Všechny pod sebou
        -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates">

                <!-- Wide: 1 řádek 4 sloupce -->
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1000"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Tile1.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile1.(Grid.Column)" Value="0"/>
                        <Setter Target="Tile2.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile2.(Grid.Column)" Value="1"/>
                        <Setter Target="Tile3.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile3.(Grid.Column)" Value="2"/>
                        <Setter Target="Tile4.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile4.(Grid.Column)" Value="3"/>
                    </VisualState.Setters>
                </VisualState>
                <!-- WideMedium: 3 nahoře, Tile4 dole jako první vlevo -->
                <VisualState x:Name="WideMedium">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="820"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Tile2.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile2.(Grid.Column)" Value="1"/>
                        <Setter Target="Tile3.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile3.(Grid.Column)" Value="2"/>
                        <Setter Target="Tile4.(Grid.Row)" Value="1"/>
                        <Setter Target="Tile4.(Grid.Column)" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                <!-- Medium: 2 řádky, 2 sloupce -->
                <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="520"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Tile1.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile1.(Grid.Column)" Value="0"/>
                        <Setter Target="Tile2.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile2.(Grid.Column)" Value="1"/>
                        <Setter Target="Tile3.(Grid.Row)" Value="1"/>
                        <Setter Target="Tile3.(Grid.Column)" Value="0"/>
                        <Setter Target="Tile4.(Grid.Row)" Value="1"/>
                        <Setter Target="Tile4.(Grid.Column)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Narrow: 4 řádky, 1 sloupec -->
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Tile1.(Grid.Row)" Value="0"/>
                        <Setter Target="Tile1.(Grid.Column)" Value="0"/>
                        <Setter Target="Tile2.(Grid.Row)" Value="1"/>
                        <Setter Target="Tile2.(Grid.Column)" Value="0"/>
                        <Setter Target="Tile3.(Grid.Row)" Value="2"/>
                        <Setter Target="Tile3.(Grid.Column)" Value="0"/>
                        <Setter Target="Tile4.(Grid.Row)" Value="3"/>
                        <Setter Target="Tile4.(Grid.Column)" Value="0"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>





    </Grid>

</UserControl>