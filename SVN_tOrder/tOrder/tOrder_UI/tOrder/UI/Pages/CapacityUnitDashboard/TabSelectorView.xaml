<!--
    TabSelectorView for CapacityUnitDashboard page (tOrder.UI)
    This UserControl is used below the header of CapacityUnitDashboard
    for tab selection. It contains 8 tabs (Dashboard, Chargen/Behälter, Werkzeuge,
    Qualität, Arbeitsplan, Dokumenten, Info, OEE), each with custom button styling,
    horizontal separation, and an indicator bar. Tab selection is handled via
    the Tab_Click event. All sizes, brushes, and styles are centrally managed
    via StaticResources for easy maintenance.
-->

<UserControl
    x:Class="tOrder.UI.TabSelectorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Centralized resources for styling and layout -->
    <UserControl.Resources>
        <!-- Colors for tab states -->
        <SolidColorBrush x:Key="TabActiveBrush" Color="#154A84"/>
        <SolidColorBrush x:Key="TabInactiveBrush" Color="#888"/>
        <SolidColorBrush x:Key="TabBackgroundBrush" Color="#DCE6F4"/>
        <SolidColorBrush x:Key="TabButtonBackgroundBrush" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="TabIndicatorActiveBrush" Color="#154A84"/>
        <SolidColorBrush x:Key="TabIndicatorInactiveBrush" Color="Transparent"/>

        <!-- Dimensions and sizing -->
        <x:Double x:Key="TabButtonWidth">112</x:Double>
        <x:Double x:Key="TabButtonHeight">49</x:Double>
        <x:Double x:Key="TabButtonFontSize">16</x:Double>
        <x:Double x:Key="TabIndicatorHeight">4</x:Double>
        <x:Double x:Key="TabSpacing">11</x:Double>
        <CornerRadius x:Key="TabButtonCornerRadius">4,4,0,0</CornerRadius>

        <!-- Font weights -->
        <FontWeight x:Key="TabButtonFontWeightBold">Bold</FontWeight>
        <FontWeight x:Key="TabButtonFontWeightNormal">Normal</FontWeight>

        <!-- Button style for tabs -->
        <Style x:Key="TabButtonStyle" TargetType="Button">

            <Setter Property="Height" Value="{StaticResource TabButtonHeight}"/>
            <Setter Property="FontSize" Value="{StaticResource TabButtonFontSize}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource TabButtonBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="{StaticResource TabButtonCornerRadius}"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="TabRoot">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--  nelze protože double neprojde 
            <ColumnDefinition Width="{StaticResource TabButtonWidth}"/>
            <ColumnDefinition Width="{StaticResource TabSpacing}"/>
        -->

        <!-- Dashboard tab -->
        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Dashboard"
                    Tag="0"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabActiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightBold}"/>
            <!-- Indicator bar for active tab -->
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
        <!-- Chargen/Behälter tab -->
        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Chargen/Behälter"
                    Tag="1"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabInactiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightNormal}"/>
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
        <!-- Werkzeuge tab -->
        <StackPanel Grid.Column="4" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Werkzeuge"
                    Tag="2"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabInactiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightNormal}"/>
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
        <!-- Qualität tab -->
        <StackPanel Grid.Column="6" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Qualität"
                    Tag="3"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabInactiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightNormal}"/>
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
        <!-- Arbeitsplan tab -->
        <StackPanel Grid.Column="8" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Arbeitsplan"
                    Tag="4"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabInactiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightNormal}"/>
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
        <!-- Dokumenten tab -->
        <StackPanel Grid.Column="10" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Dokumenten"
                    Tag="5"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabInactiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightNormal}"/>
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
        <!-- Info tab -->
        <StackPanel Grid.Column="12" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Content="Info"
                    Tag="6"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabInactiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightNormal}"/>
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
        <!-- OEE tab -->
        <StackPanel Grid.Column="14" Orientation="Vertical" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
            <Button Content="OEE"
                    Tag="7"
                    Click="Tab_Click"
                    Style="{StaticResource TabButtonStyle}"
                    Foreground="{StaticResource TabInactiveBrush}"
                    FontWeight="{StaticResource TabButtonFontWeightNormal}"/>
            <Border Height="{StaticResource TabIndicatorHeight}"
                    Background="{StaticResource TabIndicatorActiveBrush}"
                    Margin="0,-4,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>