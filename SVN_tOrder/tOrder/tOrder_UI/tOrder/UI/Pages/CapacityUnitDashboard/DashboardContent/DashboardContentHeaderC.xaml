<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="tOrder.UI.DashboardContentHeaderC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <UserControl.Resources>
        <Style x:Key="HeaderLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#BDBDBD"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="2,2"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderSubStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderSubValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5" Padding="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <!-- 0: prázdný -->
            <ColumnDefinition Width="Auto"/>
            <!-- 1: Materialcharge Label -->
            <ColumnDefinition Width="200"/>
            <!-- 2: Materialcharge Value -->
            <ColumnDefinition Width="auto"/>
            <!-- 3: prázdný + Häringcharge Label + Menge label -->
            <ColumnDefinition Width="20"/>
            <!-- 4: malá mezera -->
            <ColumnDefinition Width="200"/>
            <!-- 5: Häringcharge Value, Menge Value+text -->
            <ColumnDefinition Width="50"/>
            <!-- 6: prázdný -->
            <ColumnDefinition Width="Auto"/>
            <!-- 7: OEE -->
        </Grid.ColumnDefinitions>

        <!-- Row 0, Column 1: Materialcharge Label -->
        <TextBlock Grid.Row="0" Grid.Column="1"
        Text="Materialcharge"
        Style="{StaticResource HeaderLabelStyle}"
        VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right"/>

        <!-- Row 0, Column 2: Materialcharge Value -->
        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderBoxStyle}"
        VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="563335" Style="{StaticResource HeaderValueStyle}"/>
        </Border>

        <!-- Row 0, Column 3: Häringcharge Label -->
        <TextBlock Grid.Row="0" Grid.Column="3"
        Text="Häringcharge"
        Style="{StaticResource HeaderLabelStyle}"
        VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right"/>

        <!-- Row 1, Column 3: Menge Label -->
        <TextBlock Grid.Row="1" Grid.Column="3"
        Text="Menge:"
        Style="{StaticResource HeaderSubStyle}"
        VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right"/>

        <!-- Row 0, Column 5: Häringcharge Value -->
        <Border Grid.Row="0" Grid.Column="5" Style="{StaticResource HeaderBoxStyle}"
        VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="H0001/A0001" Style="{StaticResource HeaderValueStyle}"/>
        </Border>

        <Grid Grid.Row="1" Grid.Column="5" VerticalAlignment="Center" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Menge Value -->
                <ColumnDefinition Width="Auto"/>
                <!-- /200 Stk. -->
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource HeaderBoxStyle}" Margin="0,0,4,0">
                <TextBlock Text="150" Style="{StaticResource HeaderSubValueStyle}"/>
            </Border>
            <TextBlock Grid.Column="1" Text="/200 Stk." Style="{StaticResource HeaderSubStyle}" Margin="2,0,0,0" VerticalAlignment="Center"/>
        </Grid>

        <!-- OEE kruh vpravo -->
        <Grid Grid.Row="0" Grid.Column="7" Grid.RowSpan="2"
          HorizontalAlignment="Left" VerticalAlignment="Center"
          Width="110" Height="110">
            <Ellipse Fill="#eaffec" Stroke="Green" StrokeThickness="5"/>
            <Path Data="M 55,10 A 45,45 0 1 1 54,10" Stroke="#13c900" StrokeThickness="5" Fill="Transparent"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="OEE" Foreground="#13c900" FontWeight="SemiBold" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock Text="84,44%" Foreground="#13c900" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="↓" Foreground="Red" FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,10,0,0"/>
        </Grid>
    </Grid>




</UserControl>
