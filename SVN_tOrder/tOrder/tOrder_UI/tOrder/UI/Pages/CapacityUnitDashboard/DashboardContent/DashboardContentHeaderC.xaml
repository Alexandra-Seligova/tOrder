<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="tOrder.UI.DashboardContentHeaderC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <UserControl.Resources>
        <Style x:Key="HeaderLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#BDBDBD"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="2,2"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderSubStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="HeaderSubValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5" Padding="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <!-- 0: prázdný -->
            <ColumnDefinition Width="Auto"/>
            <!-- 1: Materialcharge Label -->
            <ColumnDefinition Width="200"/>
            <!-- 2: Materialcharge Value -->
            <ColumnDefinition Width="*"/>
            <!-- nově přidaný -->
            <ColumnDefinition Width="Auto"/>
            <!-- 3: Häringcharge Label + Menge label -->
            <ColumnDefinition Width="200"/>
            <!-- 4: Häringcharge Value -->
            <ColumnDefinition Width="50"/>
            <!-- 5: Menge Value + text -->
            <ColumnDefinition Width="*"/>
            <!-- nově přidaný -->
            <ColumnDefinition Width="auto"/>
            <!-- 6: OEE přes oba řádky -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 0, Column 1: Materialcharge Label -->
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Materialcharge"
                   Style="{StaticResource HeaderLabelStyle}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   TextAlignment="Right"/>

        <!-- Row 0, Column 2: Materialcharge Value -->
        <Border Grid.Row="0" Grid.Column="2"
                Style="{StaticResource HeaderBoxStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                CornerRadius="0">
            <TextBlock Text="563335"
                       Style="{StaticResource HeaderValueStyle}"
                       HorizontalAlignment="Right"/>
        </Border>

        <!-- Row 0, Column 4: Häringcharge Label -->
        <TextBlock Grid.Row="0" Grid.Column="4"
                   Text="Häringcharge"
                   Style="{StaticResource HeaderLabelStyle}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   TextAlignment="Right"/>

        <!-- Row 1, Column 4: Menge Label -->
        <TextBlock Grid.Row="1" Grid.Column="4"
                   Text="Menge:"
                   Style="{StaticResource HeaderSubStyle}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   TextAlignment="Right"/>

        <!-- Row 0, Column 5: Häringcharge Value -->
        <Border Grid.Row="0" Grid.Column="5"
                Style="{StaticResource HeaderBoxStyle}"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                CornerRadius="0">
            <TextBlock Text="H0001/A0001"
                       Style="{StaticResource HeaderValueStyle}"
                       HorizontalAlignment="Right"/>
        </Border>

        <!-- Row 1, Column 5: Menge Value + text -->
        <Grid Grid.Row="1" Grid.Column="5"
              VerticalAlignment="Center"
              Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Zvětšený Border na celou šířku sloupce -->
            <Border Grid.Column="0"
            Style="{StaticResource HeaderBoxStyle}"
            Margin="0,0,4,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            CornerRadius="0">
                <TextBlock Text="150"
                   Style="{StaticResource HeaderSubValueStyle}"
                   HorizontalAlignment="Right"/>
            </Border>

            <!-- Fixní text -->
            <TextBlock Grid.Column="1"
               Text="/200 Stk."
               Style="{StaticResource HeaderSubStyle}"
               Margin="2,0,0,0"
               VerticalAlignment="Center"/>
        </Grid>

        <!-- OEE kruhový ukazatel -->
        <Grid Grid.Row="0" Grid.Column="8" Grid.RowSpan="2"
      Width="80" Height="80"
      Margin="0,0,0,0">

            <!-- Světle zelené pozadí -->
            <Ellipse Fill="#D0FFD0"
             Width="72" Height="72"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"/>

            <!-- Kruhový progress indikátor -->
            <Canvas Width="72" Height="72"
            Margin="-16,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
                <Path Stroke="Green"
              StrokeThickness="4"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"
              Data="M36,0 A36,36 0 1 1 14,52"
              RenderTransformOrigin="0.5,0.5">
                    <Path.RenderTransform>
                        <RotateTransform Angle="0"/>
                    </Path.RenderTransform>
                </Path>
            </Canvas>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0">
                <!-- První řádek: šipka + OEE -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                    <TextBlock Text="⬇"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="Red"
                   VerticalAlignment="Center"
                   Margin="0,0,4,0"/>
                    <TextBlock Text="OEE"
                   FontSize="16"
                   Foreground="Black"
                   VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Druhý řádek: hodnota -->
                <TextBlock Text="84,44%"
               FontSize="14"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               Foreground="Black"/>
            </StackPanel>



        </Grid>



    </Grid>
</UserControl>
