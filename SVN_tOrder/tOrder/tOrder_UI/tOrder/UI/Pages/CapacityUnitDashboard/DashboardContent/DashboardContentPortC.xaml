<UserControl
    x:Class="tOrder.UI.DashboardContentPortC"
    x:Name="RootControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:common="using:tOrder.Common"
    xmlns:conv="using:tOrder.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <UserControl.Resources>
        <common:BindingProxy x:Key="LayoutConfigProxy"
                x:Name="LayoutConfigProxy"
                Data="{x:Bind LayoutConfig, Mode=OneWay}" />




        <!-- ðŸŽ¨ Barvy -->
        <SolidColorBrush x:Key="TabButtonSelectedForegroundBrush" Color="#154A84"/>
        <SolidColorBrush x:Key="TabButtonUnselectedForegroundBrush" Color="#444444"/>
        <SolidColorBrush x:Key="TabButtonIndicatorBrush" Color="#154A84"/>

        <!-- ðŸ“ Styl zÃ¡kladnÃ­ho tlaÄÃ­tka -->
        <Style x:Key="TabButtonBaseStyle" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource DisabledBackgroundBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="RootGrid">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="LightGray"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Barva pozadÃ­ pro neaktivnÃ­ stav -->
        <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#888888"/>
        <!-- ðŸ”· AktivnÃ­ tab -->
        <Style x:Key="TabButtonSelectedStyle"
       TargetType="Button"
       BasedOn="{StaticResource TabButtonBaseStyle}">
            <Setter Property="Foreground" Value="{StaticResource TabButtonSelectedForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TabButtonIndicatorBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,4"/>
        </Style>

        <!-- âšª NeaktivnÃ­ tab -->
        <Style x:Key="TabButtonUnselectedStyle"
       TargetType="Button"
       BasedOn="{StaticResource TabButtonBaseStyle}">
            <Setter Property="Foreground" Value="{StaticResource TabButtonUnselectedForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>




        <!-- Box pro hodnoty -->
        <Style x:Key="PortHeaderBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#BDBDBD"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="2,2"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- Hodnoty uvnitÅ™ boxÅ¯ -->
        <Style x:Key="PortHeaderValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Popisky -->
        <Style x:Key="PortHeaderLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Popisky menÅ¡Ã­ (pro Menge nebo pÅ™Ã­pony) -->
        <Style x:Key="PortHeaderSubLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Hodnota menÅ¡Ã­ (pro mnoÅ¾stvÃ­) -->
        <Style x:Key="PortHeaderSubValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="PortBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#CCCCCC"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="4,2,4,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="40"/>
        </Style>
        <Style x:Key="PortValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="32"/>
        </Style>


        <!-- Popisek (label) -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Hodnota (value) -->
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- PÅ™Ã­pona (napÅ™. Stk.) -->
        <Style x:Key="UnitTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>


        <conv:TabButtonStyleConverter x:Key="TabButtonStyleConverter"
                                      SelectedStyle="{StaticResource TabButtonSelectedStyle}"
                                      UnselectedStyle="{StaticResource TabButtonUnselectedStyle}" />
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    </UserControl.Resources>


    <Grid  x:Name="MainGrid"  Background="#F5F5F5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- HornÃ­ ÄÃ¡st (Viewbox s obsahem) -->
            <RowDefinition Height="*"/>
            <!-- VolnÃ© mÃ­sto -->
            <RowDefinition Height="Auto"/>
            <!-- SpodnÃ­ tlaÄÃ­tko -->
        </Grid.RowDefinitions>

        <!-- ðŸ”² HornÃ­ ÄÃ¡st s Viewboxem -->
        <Viewbox Grid.Row="0" x:Name="PortTopViewbox" Stretch="Uniform" Height="Auto">
            <Grid x:Name="PortTopContainer" Width="259">


                <StackPanel Orientation="Vertical">
                    <!-- ðŸ”· Nadpis portu -->
                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{x:Bind HeaderText, Mode=OneWay}"
                               Grid.ColumnSpan="2"
                               FontWeight="Bold"
                               FontSize="18"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- ðŸ§¾ Obsah -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- ðŸ·ï¸ Taby -->
                        <Grid  x:Name="TabGrid"  Grid.Row="0" Height="40">
                            <ItemsRepeater x:Name="TabRepeater" ItemsSource="{x:Bind PortContainers, Mode=OneWay}">
                                <ItemsRepeater.Layout>
                                    <StackLayout Orientation="Horizontal"/>
                                </ItemsRepeater.Layout>
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="common:PortContainerM">
                                        <Button Click="TabButton_Click"
                                            Tag="{x:Bind ContainerId}"
                                            Height="auto"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Width="{Binding ElementName=RootControl, Path=TabWidth}"
                                            Loaded="TabButton_Loaded">
                                            <TextBlock x:Name="TabLabel"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                            <Button.Style>
                                                <Binding Converter="{StaticResource TabButtonStyleConverter}"
                                                     Path="ContainerId"
                                                     ConverterParameter="{Binding ElementName=RootControl, Path=SelectedContainerId}"/>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </Grid>

                        <!-- ðŸ§¾ Obsah -->
                        <Grid Grid.Row="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind OutputText}" Style="{StaticResource LabelTextStyle}" Margin="4,4,6,5"/>


                            <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,4" CornerRadius="0"   
                                    Text="1234567"
                                     TextAlignment="Right"
                                     FontSize="18"
                                        FontWeight="SemiBold"
                                     common:ViewOnlyBehavior.IsViewOnly="True"
                            />

                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Typ:" Style="{StaticResource LabelTextStyle}" Visibility="{x:Bind IsRightPort, Converter={StaticResource BoolToVisibilityConverter}}" Margin="4,4,6,5"/>

                            <TextBox Grid.Row="2" Grid.Column="2"  Margin="0,4,0,4" CornerRadius="0"   
                    Text="{x:Bind OutputTypeText, Mode=OneWay}" Visibility="{x:Bind IsRightPort, Converter={StaticResource BoolToVisibilityConverter}}"
                     TextAlignment="Right"
                     FontSize="16"
                        FontWeight="SemiBold"
                     common:ViewOnlyBehavior.IsViewOnly="True"
            />
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Menge:" Style="{StaticResource LabelTextStyle}" Margin="4,4,6,5"/>


                            <TextBox Grid.Row="3" Grid.Column="2"  Margin="0,4,0,4" CornerRadius="0"   
                     Text="{x:Bind ContainerModel.PieceCount, Mode=OneWay}"
                     TextAlignment="Right"
                     FontSize="18"
                        FontWeight="SemiBold"
                     common:ViewOnlyBehavior.IsViewOnly="True"
            />




                            <TextBlock Grid.Row="3" Grid.Column="3" Text="Stk." Style="{StaticResource UnitTextStyle}" Margin="6,4,4,5"/>
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </Viewbox>

        <!-- ðŸŸ¦ TlaÄÃ­tko ve Viewboxu -->
        <Viewbox Grid.Row="2" x:Name="PortBottomViewbox" Stretch="Uniform" Height="Auto">
            <Grid x:Name="PortBottomContainer" Width="259">
                <Button Background="#2196F3"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Margin="0,8,0,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Padding="10,6"
                    BorderThickness="0"
                    CornerRadius="4"
                    MinWidth="140"
                       
                    IsEnabled="{x:Bind IsActionEnabled, Mode=OneWay}"
                    Click="{x:Bind OnCloseContainer}">
                    <TextBlock Text="{x:Bind ButtonText, Mode=OneWay}" TextAlignment="Center" TextWrapping="Wrap"/>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>

</UserControl>
