<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="tOrder.UI.ArbeitsplanContentC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tOrder.UI"
    xmlns:common="using:tOrder.Common"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 

    mc:Ignorable="d"
    d:DesignWidth="1024"
    d:DesignHeight="768"
>

    <UserControl.Resources>
        <common:BindingProxy x:Key="LayoutConfigProxy"
                x:Name="LayoutConfigProxy"
                Data="{x:Bind LayoutConfig, Mode=OneWay}" />



    </UserControl.Resources>


    <Grid Background="#F5F7FA" Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DATAGRID -->
        <Viewbox x:Name="DashboardContentHeaderViewbox" 
                 Grid.Row="0" Stretch="Uniform" Height="Auto"  
                 VerticalAlignment="Top">
            <Grid x:Name="DashboardContentHeaderContainer"  
              Width="{Binding Source={StaticResource LayoutConfigProxy}, Path=Data.DesignWidth}"
                Background="#F6F6F6"
                >

                <toolkit:DataGrid x:Name="ArbeitsplanDataGrid"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="All"
                                  IsReadOnly="True"
                                  RowHeight="32"
                                  SelectionMode="Single"
                                  BorderThickness="1"
                                  BorderBrush="#CCCCCC">
                    <toolkit:DataGrid.Columns>
                        <toolkit:DataGridTextColumn Header="AFO" Binding="{Binding Afo}" Width="Auto"/>
                        <toolkit:DataGridTextColumn Header="TZ von" Binding="{Binding TzVon}" Width="Auto"/>
                        <toolkit:DataGridTextColumn Header="TZ bis" Binding="{Binding TzBis}" Width="Auto"/>
                        <toolkit:DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="2*"/>
                        <toolkit:DataGridTextColumn Header="Arbeitsgang" Binding="{Binding Arbeitsgang}" Width="*"/>
                        <toolkit:DataGridTextColumn Header="Kap.Gruppe" Binding="{Binding KapGruppe}" Width="*"/>
                        <toolkit:DataGridTextColumn Header="AFO Typ" Binding="{Binding AfoTyp}" Width="Auto"/>
                        <toolkit:DataGridTextColumn Header="Extern" Binding="{Binding Extern}" Width="Auto"/>
                    </toolkit:DataGrid.Columns>
                </toolkit:DataGrid>
            </Grid>
        </Viewbox>

        <!-- DETAIL PANEL -->
        <!-- DETAIL PANEL -->
        <Viewbox x:Name="DETAILViewbox" 
            Grid.Row="1" Stretch="Uniform" Height="Auto"  
            VerticalAlignment="Top">
            <Grid x:Name="DETAILContainer"  
         Width="{Binding Source={StaticResource LayoutConfigProxy}, Path=Data.DesignWidth}"
           Background="#F6F6F6"
           >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Levý sloupec s textovými informacemi rozdělený do Gridu -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nutzungsgrad:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="85,00%" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Waschprogramm:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="T1 + T2 + Dampfentfetten(DE)" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Warenbewegung:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="US / Hubbewegung + Schaukeln 0,2 sec." HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Bemerkung:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="-" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Waschprogramm abg.:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="T1 + T2 + Dampfentfetten(DE)" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Warenbewegung abg.:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="5" Grid.Column="2" Text="US / Hubbewegung + Schaukeln 0,2 sec." HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Abg. Bemerkung:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="6" Grid.Column="2" Text="-" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Zusatztara 1:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="7" Grid.Column="2" Text="CPAL010   Clipspalette Ventilhülse 027/032" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Zusatztara 2:" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="8" Grid.Column="2" Text="" HorizontalAlignment="Left"/>
                </Grid>


                <!-- Pravý sloupec s checkboxy -->
                <StackPanel Grid.Row="1" Grid.Column="3" Spacing="0" Padding="0,0,0,0">
                    <CheckBox Content="QS-Prüfung" IsChecked="False"/>
                    <CheckBox Content="QSF-Prüfung" IsChecked="True"/>
                    <CheckBox Content="HS Pflicht" IsChecked="False"/>
                    <CheckBox Content="HS Machine" IsChecked="False"/>
                    <CheckBox Content="HS Schleifscheibe" IsChecked="False"/>
                </StackPanel>
            </Grid>
        </Viewbox>


        <!-- FOOTER BUTTONS -->
        <Viewbox x:Name="FOOTERViewbox" 
                 Grid.Row="2" Stretch="Uniform" Height="Auto"  
                 VerticalAlignment="Top">
            <Grid x:Name="FOOTERContainer"  
              Width="{Binding Source={StaticResource LayoutConfigProxy}, Path=Data.DesignWidth}"
                Background="#ECECEC" Padding="20,12"
                >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Background="#19599A" Foreground="White" FontWeight="Bold"
                        FontSize="16" MinWidth="160" Height="38"
                        Padding="0,6" BorderThickness="0" Margin="6,0,6,0" CornerRadius="4"
                        Click="OnAlternativeArbeitsplatzClicked">
                    <TextBlock Text="Alternative Arb.Pl." TextAlignment="Center"/>
                </Button>

                <Button Grid.Column="3" Background="#2196F3" Foreground="White" FontWeight="Bold"
                        FontSize="16" MinWidth="160" Height="38"
                        Padding="0,6" BorderThickness="0" Margin="6,0,6,0" CornerRadius="4"
                        Click="OnTbkLagerClicked">
                    <TextBlock Text="TBK Lager" TextAlignment="Center"/>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
